<div class="back-buttons">
  <%= button_to events_path, :class => 'my-btn gr-btn back-btn', :method => :get do %>
    All events
  <% end %>
</div>

<div class="purchases-container">
  <h1>Your purchases</h1>
  <table class="table center">
    <thead>
      <tr>
        <th>Event</th>
        <th>Description</th>
        <th class="amount">Amount</th>
      </tr>
    </thead>

    <tbody>
      <% @purchases.each do |purchase| %>
        <tr>

          <td><%= link_to purchase.event.name, event_path(purchase.event) %></td>
          <td><%= purchase.description %></td>
          <td class="amount"><%= number_to_currency(purchase.amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>


